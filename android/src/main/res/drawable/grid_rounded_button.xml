<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/transparent" /> <!-- Or use a color of your choice -->

    <!-- Corner radius for roundness -->
    <corners android:radius="8dp" /> <!-- Adjust the radius for desired roundness -->

    <!-- Border (stroke) with only the bottom border -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp" />
</shape>
