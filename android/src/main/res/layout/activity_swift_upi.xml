<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
    <!-- Vertical LinearLayout inside ScrollView -->
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="16dp">
        <!-- Transaction Status TextView -->
        <TextView android:id="@+id/transaction_status"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:text="Payment Options"
                  android:textColor="#3F51B5"
                  android:textSize="20sp"
                  android:textStyle="bold" />
        <!-- ImageView for QR Code -->
        <ImageView android:id="@+id/imageView"
                   android:layout_width="match_parent"
                   android:layout_height="240dp"
                   android:layout_marginBottom="16dp"
                   android:contentDescription="qrCode"
                   android:padding="32dp"
                   android:src="@drawable/ic_qrcode" />
        <!-- Recommended TextView -->
        <TextView android:id="@+id/recommended"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Recommended"
                  android:textSize="16sp"
                  android:paddingStart="8dp"
                  android:paddingEnd="16dp"
                  android:textColor="#3F51B5"
                  android:textStyle="bold"
                  android:gravity="start|center_vertical"
                  android:layout_marginBottom="24dp" />
        <!-- Horizontal Layout for UPI APPS Buttons -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="0dp"
                      android:layout_marginBottom="24dp"
                      android:background="@drawable/linear_layout_border"
                      android:gravity="start|center_vertical">
            <!-- PhonePe Button -->
            <Button android:id="@+id/open_phonepe"
                    android:text="UPI - PhonePe"
                    android:drawableLeft="@drawable/ic_phonepe"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:background="@drawable/rounded_button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="0dp"
                    android:drawablePadding="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/black" />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#D3D3D3" />
            <!-- Google Pay Button -->
            <Button android:id="@+id/open_gpay"
                    android:text="UPI - Gpay"
                    android:drawableLeft="@drawable/ic_googlepay"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:background="@drawable/rounded_button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="0dp"
                    android:drawablePadding="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/black" />
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#D3D3D3" />
            <!-- Paytm Button -->
            <Button android:id="@+id/open_paytm"
                    android:text="UPI - Paytm"
                    android:drawableLeft="@drawable/ic_paytm"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:background="@drawable/rounded_button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="0dp"
                    android:drawablePadding="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      android:background="@drawable/linear_layout_border"
                      android:padding="16dp">
            <!-- TextView: "All Payment Options" -->
            <TextView android:id="@+id/payment_options_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="All Payment Options"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:layout_marginBottom="16dp"
                      android:gravity="center" />
            <!-- GridLayout: containing payment option buttons -->
            <GridLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                <!-- First Button -->
                <Button android:id="@+id/open_paytm"
                        android:text="Groww"
                        android:drawableLeft="@drawable/ic_paytm"
                        android:background="@drawable/grid_rounded_button"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="0dp"
                        android:layout_columnWeight="1"
                        android:drawablePadding="24dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textSize="16sp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black" />
                <!-- Second Button -->
                <Button android:id="@+id/open_paytm"
                        android:text="Groww"
                        android:drawableLeft="@drawable/ic_paytm"
                        android:background="@drawable/grid_rounded_button"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="0dp"
                        android:layout_columnWeight="1"
                        android:drawablePadding="24dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textSize="16sp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
